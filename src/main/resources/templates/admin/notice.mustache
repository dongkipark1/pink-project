<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/common.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Pretendard:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <title>공지사항</title>
</head>
<body>
<main role="main">
  <section id="section n1">
    <aside class="side-bar side-wrapper">
      <div class="side-content header">
        <figure>
          <img src="/images/logo.png" alt="logo">
        </figure>
        <span>핑크피그</span>
      </div>
      <div class="side-content info">
        <p>관리자 : {{username}}</p>
        <p>접속일: {{currentDateTime}}</p>
        <a href="/admin/logout" class="logout-btn" id="logoutBtn">로그아웃</a>            </div>
      <div class="side-menu active">
        <p class="head-menu"><i class="fa-solid fa-marker"></i> 관리</p>
        <ul class="sub active">
          <li><a href="/admin/notice">공지사항</a></li>
          <li><a href="/admin/faq">자주 묻는 질문</a></li>
        </ul>
      </div>
    </aside>
    <div class="content-page">
      <div class="content-tab-bar">
        <ul class="tab-nav">
          <li class="tab-link current"><a href="/admin/notice">공지사항</a></li>
          <li class="tab-link"><a href="/admin/faq">자주 묻는 질문</a></li>
        </ul>
        <div class="tab-content current">
          <div class="tab-head">
            <p>공지사항</p>
          </div>
          <div class="tab-item">
            <form action="#" method="#" style="width: 100%;">
              <ul class="search-box">
                <li class="search-left">
                    <span>공지사항 <em>{{notices.size}}</em>개</span>
                </li>
                <li class="search-right">
                  <div class="tab-input-wrapper">
                    <input class="input-id" type="text" name="keyword" placeholder="검색어 입력">
                    <input class="submit-btn" type="submit" value="Search">
                  </div>
                </li>
              </ul>
            </form>
            <table>
              <colgroup>
                <col width="40%">
                <col width="25%">
                <col width="25%">
                <col width="10%">
              </colgroup>
              <thead>
              <tr>
                <th scope="col">제목</th>
                <th scope="col">작성자</th>
                <th scope="col">등록일</th>
                <th scope="col">내용</th>
              </tr>
              </thead>
              <tbody>
              {{#notices}}
                  <tr class="review">
                      <td class="title">{{title}}</td>
                      <td class="content">{{username}}</td>
                      <td>{{date}}</td>
                      <td><a class="detail-btn" href="/admin/notice/detail/{{id}}">상세보기</a></td>
                  </tr>
              {{/notices}}
              </tbody>
            </table>
          </div>
          <div class="button-wrapper">
              <a class="btn list" href="/admin/notice">목록</a>
              <a class="btn black" href="/admin/notice/save">작성</a>
          </div>
        </div>
          <div class="pagination">
          <a href="?page=1{{#keyword}}&keyword={{keyword}}{{/keyword}}">처음으로</a>
              {{#hasPrevious}}
                  <a href="?page={{previousPage}}{{#keyword}}&keyword={{keyword}}{{/keyword}}">◀</a>
              {{/hasPrevious}}
              {{#pages}}
                  <a href="?page={{number}}{{#keyword}}&keyword={{keyword}}{{/keyword}}" class="{{#isCurrent}}current{{/isCurrent}}">{{number}}</a>
              {{/pages}}
              {{#hasNext}}
                  <a href="?page={{nextPage}}{{#keyword}}&keyword={{keyword}}{{/keyword}}">▶</a>
              {{/hasNext}}
              <a href="?page={{lastPage}}{{#keyword}}&keyword={{keyword}}{{/keyword}}">끝으로</a>
          </div>
      </div>
    </div>
  </section>
</main>
<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const logoutBtn = document.getElementById('logoutBtn');

    logoutBtn.addEventListener('mouseenter', () => {
      logoutBtn.style.backgroundColor = '#f45858';
      logoutBtn.style.borderColor = '#f45858';
      logoutBtn.style.color = '#fff';
    });

    logoutBtn.addEventListener('mouseleave', () => {
      logoutBtn.style.backgroundColor = 'transparent';
      logoutBtn.style.borderColor = '#fff';
      logoutBtn.style.color = '#fff';
    });

    const manageMenu = document.getElementById('manageMenu');
    const userMenu = document.getElementById('userMenu');

    manageMenu.addEventListener('click', () => {
      manageMenu.classList.toggle('active');
    });

    userMenu.addEventListener('click', () => {
      userMenu.classList.toggle('active');
    });
  });

</script>
</body>
</html>
